@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row">
    <div class="col-md-4">

        <div class="form-group">
            <input type="hidden" id="pid" class="form-control" />
        </div>
        <div class="form-group">
            Enter Product Name:
            <input id="pname" class="form-control" />
        </div>
        <div class="form-group">
            Select Category
            <select asp="catid" id="catid" asp-items="@(new SelectList( ViewBag.Category,"catid","catname"))" class="form-control">
            </select>
        </div>
        <div class="form-group">
            Select Subcategory
            <select asp="subcatid" id="subcatid" class="form-control">
            </select>
        </div>
        <div class="form-group">
            Enter Price:
            <input id="price" class="form-control" />
        </div>
        <div class="form-group">
            Enter Quantity:
            <input id="pqty" class="form-control" />
        </div>
        <div class="form-group">
            <input type="button" id="saveupdate" value="Save" class="btn btn-primary" />
            <input type="button" id="btnclear" value="Clear" class="btn btn-primary" />
        </div>

    </div>
</div>
<table class="table" id="table_product">
    <thead>
        <tr>
            <th>
                Product ID
            </th>
            <th>
                Product Name
            </th>
            <th>
                Category Name
            </th>
            <th>
                Subcategory Name
            </th>
            <th>
                Product Price
            </th>
            <th>
                Product Quantity
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
